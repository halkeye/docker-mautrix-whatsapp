{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>halkeye/halkeye//.github/renovate/base.json5"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^.github/workflows/build.yml$", "^Dockerfile$"],
      "matchStrings": ["upstream_version: \"v(?<currentValue>.*?)\"\\n", "ARG MAUTRIX_WHATSAPP_VERSION=(?<currentValue>.*?)\\n"],
      "depNameTemplate": "mautrix/whatsapp",
      "datasourceTemplate": "github-releases",
    }
  ]
}
